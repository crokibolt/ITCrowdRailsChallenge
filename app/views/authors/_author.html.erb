<div id="<%= dom_id author %>" class="item-display">
  <div>
    <h1 class="text-xl"><%= author.full_name %></h1>
    <p><strong>Authored books:</strong> <%= author.books.count %></p>
    
  </div>
  <div class="my-auto">
        <%= link_to "Detail", author, class:"btn bg-blue-400" %>
        <%= link_to "Edit", edit_author_path(author), class:"btn bg-green-400" %>
        <%= link_to "Destroy", author, class:"btn bg-red-400", data: 
            { turbo_method: :delete } %>
    </div>
</div>
