<div id="<%= dom_id author %>" class="item-detail">
    <div class="detail-container">
        <h3><strong><%= author.full_name%> </strong></h3>
        <p><strong>Date of Birth: </strong> <%= author.date_of_birth %></p>
        <p><strong>Nationality: </strong> <%= author.nationality %></p>
        <p><strong>Authored books: </strong> <%= author.books.count %></p>
        <p><strong>About: </strong> <%= author.about %></p>
        <div class="flex justify-center text-xl gap-2">
            <%= link_to "Back to authors", authors_path, class:"btn border 
                border-blue-400 hover:bg-blue-200" %>
            <%= link_to "Edit", edit_author_path(author), class:"btn border 
                border-green-400 hover:bg-green-200" %>
            <%= link_to "Destroy", author, class:"btn border border-red-400 
                hover:bg-red-200", data: 
                { turbo_method: :delete } %>
        </div>
    </div>
</div>