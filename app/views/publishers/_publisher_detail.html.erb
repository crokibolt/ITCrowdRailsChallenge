<div id="<%= dom_id publisher %>" class="item-detail">
    <div class="detail-container">
        <h3><strong><%= publisher.name%> </strong></h3>
        <p><strong>Published books: </strong> <%= publisher.books.count %></p>
        <div class="flex justify-center text-xl gap-2">
            <%= link_to "Back to publishers", publishers_path, class:"btn border 
                border-blue-400 hover:bg-blue-200" %>
            <%= link_to "Edit", edit_publisher_path(publisher), class:"btn border 
                border-green-400 hover:bg-green-200" %>
            <%= link_to "Destroy", publisher, class:"btn border border-red-400 
                hover:bg-red-200", data: 
                { turbo_method: :delete } %>
        </div>
    </div>
</div>