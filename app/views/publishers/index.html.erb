<div class="flex flex-col w-screen h-[80vh]">
  <div class="flex p-5 justify-between">
      <h1 class="text-3xl">Publishers</h1>
      <div>
        <%= link_to "New publisher", new_publisher_path, class:"btn bg-green-500" %>
        <%= link_to "Go back to home", backroom_path, class:"btn bg-gray-400" %>
      </div>
  </div>
  <div class="separator"></div>
   <div class="flex">
    <div class="filter-form-container">
      <h1 class="text-2xl">Filter by</h1>
      <%= render "filter_form" %>
    </div>
    <% if @publishers.empty? %>
      <h1 class="text-3xl text-center text-red-500">No publisher matches the filters</h1>
    <% else %>
      <div id="publishers" class="items-container">
        <% @publishers.each do |publisher| %>
          <%= render publisher %>
          <div class="separator"></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>