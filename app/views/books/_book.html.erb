<div id="<%= dom_id book %>" class="item-display">
    <div>
        <h3 class="text-xl"><%= book.title %></h3>
        <p><strong>ISBN: </strong> <%= book.isbn %></p>
        <p><strong>Publisher: </strong> <%= book.publisher.name %></p>
        <p><strong>Author: </strong> <%= book.author.full_name %> (<%= book.author.age %>)</p>
        <p><strong>Price: </strong> $<%= book.price %></p>
    </div>
    <div class="my-auto">
        <%= link_to "Detail", book, class:"btn bg-blue-400" %>
        <%= link_to "Edit", edit_book_path(book), class:"btn bg-green-400" %>
        <%= link_to "Destroy", book, class:"btn bg-red-400", data: 
            { turbo_method: :delete } %>
    </div>
</div>
