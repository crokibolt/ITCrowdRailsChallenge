<div id="<%= dom_id book %>" class="item-detail">
    <div class="detail-container">
        <h3><strong><%= book.title %> </strong></h3>
        <p><strong>ISBN: </strong> <%= book.isbn %></p>
        <p><strong>Publisher: </strong> <%= book.publisher.name %></p>
        <p><strong>Author: </strong> <%= book.author.full_name %> (<%= book.author.age %>)</p>
        <p><strong>Review: </strong> <%= book.review %></p>
        <p><strong>Price: </strong> $<%= book.price %></p>
        <div class="flex justify-center text-xl gap-2">
            <%= link_to "Back to books", books_path, class:"btn border 
                border-blue-400 hover:bg-blue-200" %>
            <%= link_to "Edit", edit_book_path(book), class:"btn border 
                border-green-400 hover:bg-green-200" %>
            <%= link_to "Destroy", book, class:"btn border border-red-400 
                hover:bg-red-200", data: 
                { turbo_method: :delete } %>
        </div>
    </div>
</div>